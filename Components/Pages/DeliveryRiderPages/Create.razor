@page "/deliveryriders/create"
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using MakanGoFood.Domain

@inject IDbContextFactory<MakanGoFood.Data.MakanGoFoodContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Admin")]

<PageTitle>Create Rider</PageTitle>

<h1>Create Rider</h1>

@if (!string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-info">@msg</div>
}

<EditForm Model="DeliveryRider" OnValidSubmit="AddDeliveryRider">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-danger" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <InputText class="form-control" @bind-Value="DeliveryRider.Name" />
        <ValidationMessage For="() => DeliveryRider.Name" class="text-danger" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="DeliveryRider.Email" />
        <ValidationMessage For="() => DeliveryRider.Email" class="text-danger" />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <InputText class="form-control" @bind-Value="DeliveryRider.Phone" />
        <ValidationMessage For="() => DeliveryRider.Phone" class="text-danger" />
    </div>

    <div class="mb-3">
        <label class="form-label">Vehicle No</label>
        <InputText class="form-control" @bind-Value="DeliveryRider.VehicleNo" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-secondary ms-2" href="/deliveryriders">Back</a>
</EditForm>

@code {
    private DeliveryRider DeliveryRider { get; set; } = new();
    private string? msg;

    private async Task AddDeliveryRider()
    {
        using var db = DbFactory.CreateDbContext();

        db.DeliveryRider.Add(DeliveryRider);
        await db.SaveChangesAsync();

        msg = "Rider created!";
        NavigationManager.NavigateTo("/deliveryriders", forceLoad: true);
    }
}
