@page "/deliveryriders/edit"
@using Microsoft.EntityFrameworkCore
@using MakanGoFood.Domain
@inject IDbContextFactory<MakanGoFood.Data.MakanGoFoodContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Rider</PageTitle>

<h1>Edit Delivery Rider</h1>
<hr />

@if (DeliveryRider is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="@DeliveryRider" OnValidSubmit="UpdateDeliveryRider">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" role="alert" />

                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <InputText class="form-control" @bind-Value="DeliveryRider.Name" />
                    <ValidationMessage For="() => DeliveryRider.Name" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <InputText class="form-control" @bind-Value="DeliveryRider.Email" />
                    <ValidationMessage For="() => DeliveryRider.Email" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <InputText class="form-control" @bind-Value="DeliveryRider.Phone" />
                    <ValidationMessage For="() => DeliveryRider.Phone" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Vehicle No</label>
                    <InputText class="form-control" @bind-Value="DeliveryRider.VehicleNo" />
                    <ValidationMessage For="() => DeliveryRider.VehicleNo" class="text-danger" />
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-link" href="/deliveryriders">Back to List</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery(Name = "riderid")]
    public int RiderId { get; set; }

    private DeliveryRider? DeliveryRider;

    protected override async Task OnInitializedAsync()
    {
        using var db = DbFactory.CreateDbContext();

        DeliveryRider = await db.DeliveryRider
            .FirstOrDefaultAsync(r => r.RiderId == RiderId);

        if (DeliveryRider is null)
        {
            NavigationManager.NavigateTo("/deliveryriders");
        }
    }

    private async Task UpdateDeliveryRider()
    {
        using var db = DbFactory.CreateDbContext();

        db.DeliveryRider.Update(DeliveryRider!);
        await db.SaveChangesAsync();

        NavigationManager.NavigateTo("/deliveryriders");
    }
}
