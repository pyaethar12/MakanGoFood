@page "/deliveryriders/details"
@using Microsoft.EntityFrameworkCore
@using MakanGoFood.Domain
@inject IDbContextFactory<MakanGoFood.Data.MakanGoFoodContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>DeliveryRider</h2>
    <hr />
    @if (deliveryrider is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@deliveryrider.Name</dd>
            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@deliveryrider.Phone</dd>
            <dt class="col-sm-2">VehicleNo</dt>
            <dd class="col-sm-10">@deliveryrider.VehicleNo</dd>
        </dl>
        <div>
            <a href="@($"/deliveryriders/edit?riderid={deliveryrider.RiderId}")">Edit</a> |
            <a href="@($"/deliveryriders")">Back to List</a>
        </div>
    }
</div>

@code {
    private DeliveryRider? deliveryrider;

    [SupplyParameterFromQuery]
    private int RiderId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        deliveryrider = await context.DeliveryRider.FirstOrDefaultAsync(m => m.RiderId == RiderId);

        if (deliveryrider is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
