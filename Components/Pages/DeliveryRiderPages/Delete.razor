@page "/deliveryriders/delete"
@using Microsoft.EntityFrameworkCore
@using MakanGoFood.Domain
@inject IDbContextFactory<MakanGoFood.Data.MakanGoFoodContext> DbFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Delete Rider</PageTitle>

<h1>Delete Rider</h1>

@if (!string.IsNullOrWhiteSpace(errorMsg))
{
    <div class="alert alert-danger">@errorMsg</div>
}

@if (deliveryrider is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p class="text-danger fw-bold">Are you sure you want to delete this rider?</p>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@deliveryrider.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@deliveryrider.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@deliveryrider.Phone</dd>

        <dt class="col-sm-2">Vehicle No</dt>
        <dd class="col-sm-10">@deliveryrider.VehicleNo</dd>
    </dl>

    <button class="btn btn-danger" @onclick="DeleteDeliveryRider">Delete</button>
    <button class="btn btn-secondary ms-2" @onclick="Back">Back</button>
}

@code {
    private DeliveryRider? deliveryrider;
    private string? errorMsg;

    [SupplyParameterFromQuery]
    private int RiderId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var db = DbFactory.CreateDbContext();
        deliveryrider = await db.DeliveryRider.AsNoTracking()
            .FirstOrDefaultAsync(r => r.RiderId == RiderId);

        if (deliveryrider is null)
            NavigationManager.NavigateTo("notfound");
    }

    private void Back()
    {
        NavigationManager.NavigateTo("/deliveryriders");
    }

    private async Task DeleteDeliveryRider()
    {
        errorMsg = null;

        try
        {
            using var db = DbFactory.CreateDbContext();

            var entity = await db.DeliveryRider.FirstOrDefaultAsync(r => r.RiderId == RiderId);
            if (entity is null) return;

            // Unlink orders first (FK constraint)
            var orders = await db.Order.Where(o => o.RiderId == RiderId).ToListAsync();
            foreach (var o in orders)
            {
                o.RiderId = null;
                o.OrderStatus = "Pending";
            }

            db.DeliveryRider.Remove(entity);
            await db.SaveChangesAsync();

            NavigationManager.NavigateTo("/deliveryriders", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMsg = ex.Message;
        }
    }
}
