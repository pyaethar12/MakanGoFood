@page "/deliveryriders/delete"
@using Microsoft.EntityFrameworkCore
@using MakanGoFood.Domain
@inject IDbContextFactory<MakanGoFood.Data.MakanGoFoodContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>DeliveryRider</h2>
    <hr />
    @if (deliveryrider is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@deliveryrider.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@deliveryrider.Phone</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">VehicleNo</dt>
            <dd class="col-sm-10">@deliveryrider.VehicleNo</dd>
        </dl>
        <EditForm method="post" Model="deliveryrider" OnValidSubmit="DeleteDeliveryRider" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(deliveryrider is null)">Delete</button> |
            <a href="/deliveryriders">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private DeliveryRider? deliveryrider;

    [SupplyParameterFromQuery]
    private int RiderId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        deliveryrider = await context.DeliveryRider.FirstOrDefaultAsync(m => m.RiderId == RiderId);

        if (deliveryrider is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteDeliveryRider()
    {
        using var context = DbFactory.CreateDbContext();
        context.DeliveryRider.Remove(deliveryrider!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/deliveryriders");
    }
}
