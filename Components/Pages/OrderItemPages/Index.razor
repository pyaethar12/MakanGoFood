@page "/orderitems"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using MakanGoFood.Services
@using MakanGoFood.Data
@using MakanGoFood.Domain

@inject CartService Cart
@inject IDbContextFactory<MakanGoFoodContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

@rendermode InteractiveServer
@attribute [Authorize(Roles = "Customer")]

<h1>My Order (Cart)</h1>

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}
@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
    <NavLink class="btn btn-primary mt-2" href="/myorders">Go to My Orders</NavLink>
}


@if (Cart.Items.Count == 0)
{
    <p>Your cart is empty.</p>
    <NavLink class="btn btn-primary" href="/restaurants">Go to Restaurants</NavLink>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th style="width:180px;">Qty</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Cart.Items)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => Cart.Decrease(i.MenuId)">-</button>
                        <span class="mx-2">@i.Quantity</span>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => Cart.Increase(i.MenuId)">+</button>
                    </td>
                    <td>@i.Price.ToString("0.00")</td>
                    <td>@((i.Price * i.Quantity).ToString("0.00"))</td>
                </tr>
            }
        </tbody>
    </table>

    <p><b>Total: @Cart.Total.ToString("0.00")</b></p>

    <h5>Delivery Address</h5>

    @if (addresses.Count == 0)
    {
        <p class="text-muted">
            No address found. Please add an address first.
        </p>
        <NavLink class="btn btn-outline-primary" href="/addresses">Go to Address Page</NavLink>
    }
    else
    {
        <select class="form-select" @bind="selectedAddressId">
            <option value="0">-- Select Address --</option>
            @foreach (var a in addresses)
            {
                <option value="@a.AddressId">@a.Street, @a.City (@a.PostalCode)</option>
            }
        </select>

        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-success" @onclick="PlaceOrder">Place Order</button>
            <button class="btn btn-outline-danger" @onclick="ClearCart">Clear Cart</button>
            <NavLink class="btn btn-outline-secondary" href="/restaurants">Back</NavLink>
        </div>
    }
}

@code {
    private List<Address> addresses = new();
    private int selectedAddressId = 0;
    private string? error;
    private string? success;

    protected override async Task OnInitializedAsync()
    {
        await LoadAddresses();
    }

    private async Task LoadAddresses()
    {
        using var db = DbFactory.CreateDbContext();

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var email = auth.User.Identity?.Name;

        if (string.IsNullOrWhiteSpace(email))
            return;

        // Assumption: Customer.Email == Identity Email
        var customer = await db.Customer.FirstOrDefaultAsync(c => c.Email == email);

        // If customer row doesn't exist, create it automatically (so orders can work)
        if (customer is null)
        {
            customer = new Customer
            {
                Name = email,
                Email = email,
                Phone = ""
            };
            db.Customer.Add(customer);
            await db.SaveChangesAsync();
        }

        addresses = await db.Address
            .Where(a => a.CustomerId == customer.CustomerId)
            .AsNoTracking()
            .ToListAsync();
    }

    private void ClearCart()
    {
        Cart.Clear();
        error = null;
        success = "Cart cleared.";
    }

    private async Task PlaceOrder()
    {
        error = null;
        success = null;

        if (Cart.Items.Count == 0)
        {
            error = "Your cart is empty.";
            return;
        }

        if (selectedAddressId <= 0)
        {
            error = "Please select an address.";
            return;
        }

        using var db = DbFactory.CreateDbContext();

        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var email = auth.User.Identity?.Name;

        if (string.IsNullOrWhiteSpace(email))
        {
            error = "Not logged in.";
            return;
        }

        var customer = await db.Customer.FirstOrDefaultAsync(c => c.Email == email);
        if (customer is null)
        {
            customer = new Customer
            {
                Name = email,
                Email = email,
                Phone = ""
            };
            db.Customer.Add(customer);
            await db.SaveChangesAsync();
        }


        // Simple rule: 1 order = 1 restaurant (based on first cart item)
        var firstMenuId = Cart.Items[0].MenuId;
        var firstMenu = await db.Menu.FirstOrDefaultAsync(m => m.MenuId == firstMenuId);
        if (firstMenu is null)
        {
            error = "Menu item not found.";
            return;
        }

        var order = new Order
        {
            OrderDateTime = DateTime.Now,
            OrderStatus = "Pending",
            AddressId = selectedAddressId,
            CustomerId = customer.CustomerId,
            RestaurantId = firstMenu.RestaurantId,
            RiderId = null
        };

        db.Order.Add(order);
        await db.SaveChangesAsync(); // gets OrderId

        foreach (var item in Cart.Items)
        {
            db.OrderItem.Add(new OrderItem
            {
                OrderId = order.OrderId,
                MenuId = item.MenuId,
                Quantity = item.Quantity,
                Subtotal = item.Price * item.Quantity
            });
        }

        await db.SaveChangesAsync();

        Cart.Clear();
        success = $"Order placed successfully! Order ID: {order.OrderId}";

        // Optional: redirect after success
        // Nav.NavigateTo("/restaurants");
        

    }
}
