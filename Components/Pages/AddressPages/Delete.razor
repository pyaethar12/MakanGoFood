@page "/addresses/delete"
@using Microsoft.EntityFrameworkCore
@using MakanGoFood.Domain
@inject IDbContextFactory<MakanGoFood.Data.MakanGoFoodContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Address</PageTitle>

<h1>Delete Address</h1>

<p>Are you sure you want to delete this address?</p>

@if (!string.IsNullOrWhiteSpace(errorMsg))
{
    <div class="alert alert-danger">@errorMsg</div>
}

@if (address is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card p-3">
        <dl class="row mb-0">
            <dt class="col-sm-3">Street</dt>
            <dd class="col-sm-9">@address.Street</dd>

            <dt class="col-sm-3">City</dt>
            <dd class="col-sm-9">@address.City</dd>

            <dt class="col-sm-3">Postal Code</dt>
            <dd class="col-sm-9">@address.PostalCode</dd>
        </dl>

        <EditForm Model="address" OnValidSubmit="DeleteAddress" FormName="delete" Enhance>
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-outline-secondary" href="/addresses">Back</a>
            </div>
        </EditForm>
    </div>
}

@code {
    private Address? address;
    private string? errorMsg;

    [SupplyParameterFromQuery]
    private int AddressId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (AddressId <= 0)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        using var context = DbFactory.CreateDbContext();

        address = await context.Address
            .AsNoTracking()
            .FirstOrDefaultAsync(a => a.AddressId == AddressId);

        if (address is null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    private async Task DeleteAddress()
    {
        errorMsg = null;

        using var context = DbFactory.CreateDbContext();

        var addressToDelete = await context.Address.FindAsync(AddressId);
        if (addressToDelete is null)
        {
            NavigationManager.NavigateTo("/addresses");
            return;
        }

        // Block delete if any order references this address
        var usedByOrder = await context.Order.AnyAsync(o => o.AddressId == AddressId);
        if (usedByOrder)
        {
            errorMsg = "Cannot delete this address because it is used by an existing order.";
            return;
        }

        context.Address.Remove(addressToDelete);
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/addresses");
    }
}
