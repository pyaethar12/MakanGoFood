@page "/myorders"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using MakanGoFood.Data
@using MakanGoFood.Domain

@inject IDbContextFactory<MakanGoFoodContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

@rendermode InteractiveServer
@attribute [Authorize(Roles = "Customer")]

<h1>My Orders</h1>

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

@if (loading)
{
    <p><em>Loading...</em></p>
}
else if (orders.Count == 0)
{
    <p>No orders yet.</p>
    <NavLink class="btn btn-primary" href="/restaurants">Go to Restaurants</NavLink>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>OrderId</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th>Payment</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in orders)
            {
                <tr>
                    <td>@o.OrderId</td>
                    <td>@o.OrderDateTime</td>
                    <td>@o.OrderStatus</td>
                    <td>@o.OrderTotal.ToString("0.00")</td>
                    <td>@(o.Payment?.PaymentStatus ?? "No Payment")</td>
                    <td class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary"
                                @onclick='() => Nav.NavigateTo($"/myorders/{o.OrderId}")'>
                            View
                        </button>

                        @if (o.Payment is not null && o.Payment.PaymentStatus != "Paid")
                        {
                            <button class="btn btn-sm btn-success"
                                    @onclick='() => Nav.NavigateTo($"/payment/{o.OrderId}")'>
                                Pay Now
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private bool loading = true;
    private string? error;
    private List<Order> orders = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            using var db = DbFactory.CreateDbContext();

            var auth = await AuthStateProvider.GetAuthenticationStateAsync();
            var email = auth.User.Identity?.Name;

            if (string.IsNullOrWhiteSpace(email))
            {
                error = "Not logged in.";
                return;
            }

            // Ensure customer exists (same as cart)
            var customer = await db.Customer.FirstOrDefaultAsync(c => c.Email == email);
            if (customer is null)
            {
                customer = new Customer
                {
                    Name = email,
                    Email = email,
                    Phone = ""
                };
                db.Customer.Add(customer);
                await db.SaveChangesAsync();
            }

            orders = await db.Order
                .Include(o => o.Payment)
                .Where(o => o.CustomerId == customer.CustomerId)
                .OrderByDescending(o => o.OrderDateTime)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }
}
