@implements IDisposable
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Components.Authorization

<nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <a class="navbar-brand" href="/">MakanGoFood</a>

    <button class="navbar-toggler" type="button"
            data-bs-toggle="collapse"
            data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

            <li class="nav-item">
                <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
            </li>

            <AuthorizeView>
                <Authorized Context="auth">

                    <!-- CUSTOMER -->
                    <AuthorizeView Roles="Customer">
                        <li class="nav-item"><NavLink class="nav-link" href="addresses">My Address</NavLink></li>
                        <li class="nav-item"><NavLink class="nav-link" href="orderitems">Cart</NavLink></li>
                        <li class="nav-item"><NavLink class="nav-link" href="myorders">My Orders</NavLink></li>
                        <li class="nav-item"><NavLink class="nav-link" href="restaurants">Restaurants</NavLink></li>
                    </AuthorizeView>

                    <!-- RIDER -->
                    <AuthorizeView Roles="Rider">
                        <li class="nav-item"><NavLink class="nav-link" href="orders">Assigned Orders</NavLink></li>
                    </AuthorizeView>

                    <!-- ADMIN -->
                    <AuthorizeView Roles="Admin">
                        <li class="nav-item"><NavLink class="nav-link" href="deliveryriders">Riders</NavLink></li>
                        <li class="nav-item"><NavLink class="nav-link" href="customers">Customers</NavLink></li>
                    </AuthorizeView>

                </Authorized>

                <NotAuthorized>
                    <li class="nav-item"><NavLink class="nav-link" href="Account/Login">Login</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="Account/Register">Register</NavLink></li>
                </NotAuthorized>
            </AuthorizeView>
        </ul>

        <AuthorizeView>
            <Authorized Context="auth">
                <span class="navbar-text me-3">@auth.User.Identity?.Name</span>

                <form action="Account/Logout" method="post" class="d-inline">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <button class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </Authorized>
        </AuthorizeView>
    </div>
</nav>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
